<div class="w-full">
  <div class="flex justify-between items-center">
    <h1 class="font-bold text-3xl">Bank statement: <%=  %></h1>
    <%= link_to "New cash", new_cash_path, class: "rounded-lg py-3 px-5 bg-blue-600 text-white block font-medium" %>
  </div>

  <div id="cashes" class="min-w-full">
    <% @cashes.each do |cash| %>
      <%= render cash %>
    <% end %>
  </div>
</div>
